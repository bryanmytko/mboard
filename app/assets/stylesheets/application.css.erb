body { font-family: "Helvetica", "arial", sans-serif; font-size: 1.0em; background-color: #fff; color: #222 }
#mainContainer { width: 980px; margin: 0 auto; background-color: #fff }
h1 { font-family: "Helvetica", "arial", sans-serif; margin: 0; color: #555 }
h2 { color: #4183C4 }
p { margin: 0 }
a { color: #4183C4; text-decoration: none; font-size: 1em }
a:hover { text-decoration: underline; color: #4183C4 }

#header { background: url(<%= asset_path "headerBg.png" %>) 0 0 repeat-x; height: 50px; padding: 10px 0 }
#headerContent { width: 980px; margin: 0 auto }
#headerContent p { color: #222; font-size: .8em; float: right; padding-top: 5px }
#headerContent a { color: #222; text-decoration: none; font-weight: bold; font-size: 1em }
#headerContent a:hover { text-decoration: underline; color: #4183C4 }
#headerContent em { color: #C9C9C9; font-style: normal }
#header #logo { height: 26px; width: 220px; display: block; cursor: pointer; background: url(<%= asset_path "logo.png" %>) 0 0 no-repeat; float: left; margin-top: 4px }

#welcomeContent { margin: 20px 0 30px 0 }
#mainContent h2 { margin: 0 }
#gravatarContainer,
#welcomeMessage { float: left }
#gravatarContainer { padding-top: 8px }

p.homepage_content { font-size: .9em }

#topics tr, #topics table { width: 100%; margin-top: 30px }
#topics th.title, td.title { width: 40% }
#topics th, td { text-align: left; padding: 10px 14px; font-size: 1.0em }
#topics th { background: url(<%= asset_path "headerBg.png" %>) 0 -7px repeat-x; color: #3a3a3a }
#topics td { background: #f5f5f5; border-bottom: 1px solid #d5d5d5 }
#topics table { font-size: .9em }

.homepage_gravatar { float: left; margin: 0 12px 8px 0 }

.error_messages h2 { color: #f00; font-size: .8em }
.error_messages li { color: #f00; font-size: .7em }

.notice { background: #4183C4; color: #fff; padding: 0 }
.notice p { color: #fff; padding: 6px }
.alert { background: #f00; color: #fff; padding: 0 }
.alert p { color: #fff; padding: 6px }

#signup { width: 400px; margin: 50px auto; background: url(<%= asset_path "formBg.png" %>) 0 0 repeat-x #e6e3e3; border: 1px solid #dadada; padding: 20px }
#signup .input_container { margin: 12px 0 }
#signup form { font-size: 1.3em; color: #666 }
#signup form label { float: left; font-size: .7em; padding: 4px 0 }
#signup form input { height: 20px; width: 250px; padding: 3px; border: 1px solid #b9b9b9; float: right; font-size: .7em; color: #666 }
#signup form input[type=submit] { height: 30px; width: 100px; cursor: pointer; color: #666 }
#signup form input[type=submit]:hover { background: #b9b9b9 }

#replyContainer { border-top: 1px solid #d5d5d5 }
.reply { background: #f5f5f5; border-bottom: 1px solid #d5d5d5; padding: 20px }
.reply .author { color: #4183C4 }
.authorContainer, .commentContainer { float: left }
.authorContainer { width: 10% }
.authorContainer a { display: block; font-size: .8em }
.authorContainer img { border: 1px solid #d5d5d5 }
.commentContainer { padding: 0 0 0 20px; width: 86%; font-size: .8em }
#reply #signup { float: right; margin-top: 0 !important; padding-top: 6px; border-top: 0; border-left: 0; border-right: 0; background: whitesmoke; padding-bottom: 6px }
#reply #signup textarea { font-size: .7em; padding: 6px; margin: 4px 0 0 12px; width: 306px }














